<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========== Tat ca phong Screen ========== -->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/mar_left_and_right_parent</item>
        <item name="android:layout_marginRight">@dimen/mar_left_and_right_parent</item>
    </style>

    <style name="style_parent1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_parent1.1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button Quan tri khac -->
    <style name="styles_btn_quan_tri_khac">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:text">@string/btn_quan_tri_khac</item>
        <item name="android:textColor">@color/text_color_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingTop">@dimen/pad_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingBottom">@dimen/pad_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingStart">@dimen/pad_left_and_right_btn_quan_tri_khac</item>
        <item name="android:paddingEnd">@dimen/pad_left_and_right_btn_quan_tri_khac</item>
        <item name="android:layout_marginTop">@dimen/mar_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:layout_marginBottom">@dimen/mar_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:background">@drawable/custom_button_in_tat_ca_phong_screen</item>
        <item name="android:gravity">right</item>

    </style>

    <!-- Button Them phong -->
    <style name="styles_btn_them_phong">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:text">@string/btn_them_phong</item>
        <item name="android:textColor">@color/text_color_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingTop">@dimen/pad_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingBottom">@dimen/pad_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:paddingStart">@dimen/pad_left_and_right_btn_them_phong</item>
        <item name="android:paddingEnd">@dimen/pad_left_and_right_btn_them_phong</item>
        <item name="android:layout_marginTop">@dimen/mar_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:layout_marginBottom">@dimen/mar_top_and_bot_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:background">@drawable/custom_button_in_tat_ca_phong_screen</item>
        <item name="android:drawableStart">@drawable/ic_plus</item>
        <item name="android:drawablePadding">@dimen/pad_btn</item>
        <item name="android:gravity">left</item>

    </style>

    <!-- Edit tim kiem-->
    <style name="styles_edt_tim_kiem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:hint">@string/hint_text_search</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_btn</item>
        <item name="android:textSize">@dimen/text_size_edt_search</item>
        <item name="android:paddingStart">@dimen/pad_left_and_right_edt_search</item>
        <item name="android:paddingEnd">@dimen/pad_left_and_right_edt_search</item>
        <item name="android:paddingTop">@dimen/pad_top_and_bot_edt_search</item>
        <item name="android:paddingBottom">@dimen/pad_top_and_bot_edt_search</item>
        <item name="android:layout_marginLeft">@dimen/mar_left_right_edt_search</item>
        <item name="android:layout_marginRight">@dimen/mar_left_right_edt_search</item>
        <item name="android:layout_marginTop">@dimen/mar_top_bot_edt_search</item>
        <item name="android:layout_marginBottom">@dimen/mar_top_bot_edt_search</item>
        <item name="android:background">@drawable/custom_edt_tim_kiem_phong</item>
        <item name="android:drawableStart">@drawable/ic_tim_kiem_phong</item>
        <item name="android:drawablePadding">@dimen/draw_padding_icon</item>

    </style>

    <!-- Spinner loai phong va trang thai phong -->
    <style name="style_spn_loai_phong">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:entries">@array/array_test</item>
        <item name="android:paddingTop">@dimen/pad_top_and_bot_spn_loc_phong</item>
        <item name="android:paddingBottom">@dimen/pad_top_and_bot_spn_loc_phong</item>
        <item name="android:paddingLeft">@dimen/pad_left_and_right_spn_loc_phong</item>
        <item name="android:paddingRight">@dimen/pad_left_and_right_spn_loc_phong</item>
        <item name="android:layout_marginLeft">@dimen/mar_left_and_right_spn_loc_phong</item>
        <item name="android:layout_marginRight">@dimen/mar_left_and_right_spn_loc_phong</item>
        <item name="android:layout_marginTop">@dimen/mar_top_and_bot_spn_loc_phong</item>
        <item name="android:layout_marginBottom">@dimen/mar_top_and_bot_spn_loc_phong</item>
        <item name="android:background">@drawable/custom_spinner_loai_phong_and_trang_thai</item>
    </style>

    <style name="styles_parent2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ListView -->
    <style name="style_header_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_title_listview</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="style_tv_title_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/text_color_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_btn_quan_tri_khac_and_btn_them_phong</item>
        <item name="android:background">@drawable/custom_title_listview</item>
    </style>

    <style name="style_listview_ds_phong">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Bottom navigation bar -->
    <style name="styles_bot_nav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menu">@menu/bottom_navigation</item>
        <item name="android:background">@color/background_bot_nav</item>
        <item name="android:paddingTop">@dimen/pad_bot_top_bot_nav</item>
        <item name="android:paddingBottom">@dimen/pad_bot_top_bot_nav</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Fragment -->
    <style name="frag_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- Action bar -->

    <!-- ========== End tat ca phong Screen ========== -->

</resources>